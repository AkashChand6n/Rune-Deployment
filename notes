sudo apt update
sudo apt install mysql-server
sudo systemctl start mysql
sudo systemctl enable mysql
pip install pymysql
sudo mysql
CREATE DATABASE rune_db;
CREATE USER 'rune_user'@'localhost' IDENTIFIED BY 'password';
GRANT ALL PRIVILEGES ON rune_db.* TO 'rune_user'@'localhost';
FLUSH PRIVILEGES;
EXIT;

.env
------
MYSQL_USER=rune_user
MYSQL_PASSWORD=password
MYSQL_DB=rune_db
MYSQL_HOST=localhost
MYSQL_PORT=3306

export MYSQL_USER=your_user
export MYSQL_PASSWORD=your_password
export MYSQL_DB=your_db
export MYSQL_HOST=your_host
export MYSQL_PORT=3306

mysql -u rune_user -p -h localhost -P 3306
USE rune_db;
SHOW TABLES;
DESCRIBE users;
SELECT * FROM users;



